@model Car

<div class="col-lg-3 mb-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" style="max-width: 225px; max-height: 225px; display: block; margin-left: auto; margin-right: auto;" />
    <h4>@Model.name</h4>
    <p>@Model.shortDesc</p>
    <h5>Цена: @Model.price.ToString("# Br")</h5>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
</div>